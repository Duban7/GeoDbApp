<Window x:Class="Geo.Wpf.Windows.ExpeditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geo.Wpf.Windows"
        xmlns:states="clr-namespace:Geo.Domain.Models;assembly=Geo.Domain"
        mc:Ignorable="d"
        Title="GeologistWindow" 
        Height="600"
        Width="400"
         WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseMove="Window_MouseMove">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Themes/RoundButton.xaml"/>
                <ResourceDictionary Source="../../Themes/TextBox.xaml"/>
                <ResourceDictionary Source="../../Themes/ComboBoxForModels.xaml"/>
                <ResourceDictionary Source="../../Themes/DialogWindowButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#2f1212"
            CornerRadius="25"
            BorderBrush="Black"
            BorderThickness="0.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Column="1"
                        Style="{StaticResource RoundButtonTheme}"
                        Width="15"
                        Height="15"
                        Background="Red"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="15"
                        Click="ButtonCloseWindow_Click"/>   

                <TextBlock Grid.Row="0"
                           Text="Name"
                           FontSize="20"
                           VerticalAlignment="Bottom"
                           Margin="40 0 50 0"
                           Foreground="White"/>
                <TextBox Grid.Row="1"
                         Margin="10"
                         x:Name="nameTextBox"
                         Style="{DynamicResource TextBoxStyle}"
                         TextChanged="TextBox_TextChanged"
                         Text="{Binding Name}"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Date"
                           FontSize="20"
                           VerticalAlignment="Bottom"
                           Margin="40 0 0 0"
                           Foreground="White"/>
                <DatePickerTextBox Style="{DynamicResource TextBoxStyle}"
                                   Grid.Row="1"
                                   Margin="10"
                                   x:Name="DatePickerTextBox"
                                   TextChanged="TextBox_TextChanged"
                                   Text="{Binding Date, StringFormat='dd-MM-yyyy'}"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Route"
                           FontSize="20"
                           VerticalAlignment="Bottom"
                           Margin="40 0 0 0"
                           Foreground="White"/>
                <ComboBox Style="{DynamicResource ComboBoxModelStyle}"
                          Grid.Row="1"
                          Margin="10"
                          ItemContainerStyle="{StaticResource ComboBoxModelItemStyle}"
                          x:Name="routeComboBox"/>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Geologists"
                           FontSize="20"
                           VerticalAlignment="Bottom"
                           Margin="40 0 0 0"
                           Foreground="White"/>
                <ComboBox Style="{DynamicResource ComboBoxModelStyle}"
                          Grid.Row="1"
                          Margin="10"
                          ItemContainerStyle="{StaticResource ComboBoxModelItemStyle}"
                          x:Name="geologistsComboBox"/>
                <ScrollViewer Grid.Row="2"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="geologistsContainer"
                                Margin="10">
                        
                    </StackPanel>
                </ScrollViewer>

            </Grid>
            <Button Style="{DynamicResource ButtonStyle}" Grid.Row="5"
                    Margin="20 20"
                    Content="Add"
                    FontSize="20"
                    Click="Button_Click"
                    IsEnabled="False"
                    x:Name="addButton"/>
        </Grid>
    </Border>
</Window>
